extends ../layout
block content	
	.main-content
		h2 书评人
		ul.reviewer
			-for (var i = bookComment.length - 1; i >= 0; --i)
				li.mr10
					a.avatar(href='/user/#{bookComment[i].userId.name}')
						-if(avatar)
							img(src='/images/avatar/#{bookComment[i].userId._id}')
						-else
							img.fl.avatar(src='../images/default/avatar.png')
					.userInfo
						a(href='/user/#{bookComment[i].userId.name}') #{bookComment[i].userId.name}
						p 评论《#{bookComment[i].bookId.name_zh}》
						p #{bookComment[i].comment.content}
						p
							!{bookComment[i].useful}有用 #{bookComment[i].datetime}